<div class="layout-page">
  {% if vent_type %}
    {% include '@component/header/header.html.twig' %}
  {% endif %}

  <div class="container-fluid px-0">
    <div class="row m-0">
      {% if logged_in and vent_type %}
        <div class="col-lg-10 px-0 content_page__main">
      {% else %}
        <div class="col-lg-12 px-0 content_page__main">
      {% endif %}
        {% block main %}
          <main class="layout-content" id="main-content" role="main" tabindex="-1">
            {% block body %}
              <div class="container-fluid p-0">
                {{ page.top_content }}
                {{ page.content }}
              </div>
            {% endblock %}
          </main>
        {% endblock %}

        {% block footer %}
          {% include '@component/footer/footer.html.twig' %}
        {% endblock %}
      </div>

      {% if logged_in and vent_type %}
        {{ page.sidebar_right }}
      {% endif %}
    </div>
  </div>
</div>

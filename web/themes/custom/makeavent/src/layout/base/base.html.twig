<div class="layout-page">
  {% block header %}
    {% include '@component/header/header.html.twig' %}
  {% endblock %}

  <div class="container-fluid px-0">
    <div class="row m-0">
      {% if logged_in %}
        <div class="col-lg-10 px-0 content_page__main">
      {% else %}
        <div class="col-lg-12 px-0 content_page__main">
      {% endif %}
        {% block main %}
          <main class="layout-content" id="main-content" role="main" tabindex="-1">
            {% block body %}
              <div class="container-fluid p-0">
                {{ page.top_content }}
                {{ page.content }}
              </div>
            {% endblock %}
          </main>
        {% endblock %}

        {% block footer %}
          {% include '@component/footer/footer.html.twig' %}
        {% endblock %}
      </div>

      {% if logged_in %}
        {% block aside %}
          <aside class="col-lg-2 px-0 border border-secondary position-fixed bottom-0" id="chat" role="complementary" tabindex="-1" style="background-color: #F4EDFB; height: calc(100vh - 70px); right: 0">
            {{ page.sidebar_right }}
          </aside>
        {% endblock %}
      {% endif %}
    </div>
  </div>
</div>
